{
  "name": "create-ai-assisted-project",
  "version": "1.0.0",
  "description": "AI-Assisted Development Toolkit for creating projects with streamlined AI workflows",
  "type": "module",
  "bin": {
    "create-ai-assisted-project": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node scripts/test-cli.js",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "clean": "rm -rf dist test-output",
    "prepublishOnly": "npm run clean && npm run build",
    "prerelease": "npm run test && npm run test:unit",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release": "standard-version",
    "postbump": "git push && git push --tags"
  },
  "keywords": [
    "ai",
    "ai-assisted",
    "development-toolkit",
    "project-template",
    "cli",
    "scaffolding",
    "react",
    "typescript",
    "workflow",
    "productivity"
  ],
  "author": "",
  "license": "UNLICENSED",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "inquirer": "^9.2.15",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "jest": "^29.7.0",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "prettier": "^3.2.5",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "templates",
    "README.md",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/unctad-ai/create-ai-assisted-project"
  },
  "bugs": {
    "url": "https://github.com/unctad-ai/create-ai-assisted-project/issues"
  },
  "homepage": "https://github.com/unctad-ai/create-ai-assisted-project#readme"
}
